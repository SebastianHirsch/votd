#!/usr/bin/env ruby

# allow this to run from development environment
$LOAD_PATH.unshift File.join(File.dirname(__FILE__), '..', 'lib')

require 'votd'

votd = Votd::NetBible.new

puts "===================================================="
puts "          VERSE OF THE DAY for #{votd.date.to_s}"
puts "===================================================="
puts votd.text
puts "#{votd.reference} (#{votd.version})"

