#!/usr/bin/env ruby

# allow this to run from development environment
$LOAD_PATH.unshift File.join(File.dirname(__FILE__), '..', 'lib')

require 'votd'

votd = Votd::BibleGateway.new

def banner(width = 78)
  width = yield.size
  puts "=" * width
  puts yield
  puts "=" * width
end

banner do
  "VERSE OF THE DAY for #{votd.date.to_s}"
end

puts votd.to_text
